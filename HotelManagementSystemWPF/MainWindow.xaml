<Window x:Class="HotelManagementSystemWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NIBM LMS Login"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
          
        Background="#1A1A2E">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Background="#16213E"
                CornerRadius="20"
                Padding="30"
                Width="400"
                BorderBrush="#0F3460"
                BorderThickness="2"
                Effect="{DynamicResource DropShadowEffect}">

            <StackPanel>
                <TextBlock Text="HOTEL SYSTEM"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Username"
                           Foreground="White"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Password"
                           Foreground="White"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             Height="30"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                <Button Content="Login"
                        Background="#0F3460"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Height="35"
                        Cursor="Hand"
                        BorderThickness="0"
                        Name="btnLogin" Click="btnLogin_Click"
                       />

                <TextBlock Text="Forgot Password?"
                           MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                           Foreground="#E94560"
                           FontSize="12"
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           />
            </StackPanel>
        </Border>
    </StackPanel>
    
</Window>