<Window x:Class="HotelManagementSystemWPF.bill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Bill" Height="300" Width="500"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Header Section -->
        <Border Background="#2C3E50" Height="60" VerticalAlignment="Top">
            <TextBlock Text="🧾 Generate Bill" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,15,0,0"/>
        </Border>

        <!-- Main Content -->
        <Border Background="White" Padding="20" Margin="20,80,20,20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto">
                <TextBlock Text="Booking ID:" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                <TextBox Name="txtBookingID" Width="300" Height="35" Padding="5" BorderBrush="#BDC3C7" BorderThickness="1"/>

                <Button Content="Generate" Background="#27AE60" Foreground="White" FontSize="16" Padding="10" Width="180" BorderThickness="0" Cursor="Hand" Margin="20,20,0,0" Click="Button_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>


